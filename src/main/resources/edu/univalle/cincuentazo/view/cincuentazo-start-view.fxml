<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.univalle.cincuentazo.controller.StartController">
    <children>
        <VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="15.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- Título del juego -->
            <Label text="CINCUENTAZO" textFill="#971616">
                <font>
                    <Font name="Showcard Gothic" size="32.0" />
                </font>
            </Label>

            <!-- Texto de selección -->
            <Label text="Seleccione la cantidad de jugadores máquina:" textFill="#2c1818">
                <font>
                    <Font name="Century Gothic" size="14.0" />
                </font>
            </Label>

            <!-- RadioButtons -->
            <RadioButton fx:id="rb1" style="-fx-cursor: hand;" text="1 jugador máquina" textFill="#2c1818">
                <font>
                    <Font name="Century Gothic" size="12.0" />
                </font>
            </RadioButton>
            <RadioButton fx:id="rb2" style="-fx-cursor: hand;" text="2 jugadores máquina" textFill="#2c1818">
                <font>
                    <Font name="Century Gothic" size="12.0" />
                </font>
            </RadioButton>
            <RadioButton fx:id="rb3" style="-fx-cursor: hand;" text="3 jugadores máquina" textFill="#2c1818">
                <font>
                    <Font name="Century Gothic" size="12.0" />
                </font>
            </RadioButton>

            <!-- Botón iniciar -->
            <Button fx:id="btnStart" disable="true" prefWidth="150" style="-fx-background-color: ffbdbd;" text="Iniciar juego" textFill="#2c0505">
                <font>
                    <Font name="Century Gothic" size="14.0" />
                </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            </Button>

        </VBox>
    </children>
</AnchorPane>
