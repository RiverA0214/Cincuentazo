<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<BorderPane fx:controller="edu.univalle.cincuentazo.controller.GameController"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: #006400;">

    <!-- Jugador máquina superior -->
    <top>
        <VBox alignment="center" spacing="10">
            <Label text="Máquina 1" style="-fx-font-size: 18; -fx-text-fill: white;"/>
            <HBox fx:id="machineTopArea" alignment="center" spacing="10"/>
        </VBox>
    </top>

    <!-- Jugador máquina izquierda -->
    <left>
        <VBox alignment="center" spacing="10">
            <Label text="Máquina 2" style="-fx-font-size: 18; -fx-text-fill: white;"/>
            <VBox fx:id="machineLeftArea" alignment="center" spacing="10"/>
        </VBox>
    </left>

    <!-- Jugador máquina derecha -->
    <right>
        <VBox alignment="center" spacing="10">
            <Label text="Máquina 3" style="-fx-font-size: 18; -fx-text-fill: white;"/>
            <VBox fx:id="machineRightArea" alignment="center" spacing="10"/>
        </VBox>
    </right>

    <!-- Mesa (centro) -->
    <center>
        <VBox alignment="center" spacing="20">
            <HBox alignment="center" spacing="40">
                <ImageView fx:id="deckImage" fitWidth="100" fitHeight="150" onMouseClicked="#onDeckClicked"/>
                <ImageView fx:id="tableCardImage" fitWidth="100" fitHeight="150"/>
            </HBox>
            <Label fx:id="sumLabel" text="Suma: 0" style="-fx-font-size: 20; -fx-text-fill: white;"/>
        </VBox>
    </center>

    <!-- Jugador humano (abajo) -->
    <bottom>
        <VBox alignment="center" spacing="10">
            <Label text="Tú" style="-fx-font-size: 18; -fx-text-fill: white;"/>
            <GridPane fx:id="playerCardsGrid" hgap="10" vgap="10" alignment="center"/>
        </VBox>
    </bottom>
</BorderPane>
