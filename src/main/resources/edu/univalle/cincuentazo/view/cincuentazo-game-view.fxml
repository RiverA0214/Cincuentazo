<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>

<BorderPane fx:controller="edu.univalle.cincuentazo.controller.GameController"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #004d26, #006400, #1a472a);">

    <!-- Título -->
    <top>
        <VBox alignment="center" spacing="20" style="-fx-padding: 15;">
            <Label text="CINCUENTAZO"
                   style="-fx-font-family: 'Showcard Gothic'; -fx-font-size: 36px; -fx-text-fill: gold; -fx-effect: dropshadow(one-pass-box, black, 4, 0.5, 2, 2);"/>
        </VBox>
    </top>

    <!-- Jugador máquina superior -->
    <top>
        <VBox alignment="center" spacing="10" style="-fx-padding: 5;">
            <Label text="Máquina 1"
                   style="-fx-font-family: 'Century Gothic'; -fx-font-size: 18px; -fx-text-fill: white;"/>
            <HBox fx:id="machineTopArea" alignment="center" spacing="10"/>
        </VBox>
    </top>

    <!-- Jugador máquina izquierda -->
    <left>
        <VBox alignment="center" spacing="10" style="-fx-padding: 10;">
            <Label text="Máquina 2"
                   style="-fx-font-family: 'Century Gothic'; -fx-font-size: 18px; -fx-text-fill: white;"/>
            <VBox fx:id="machineLeftArea" alignment="center" spacing="10"/>
        </VBox>
    </left>

    <!-- Jugador máquina derecha -->
    <right>
        <VBox alignment="center" spacing="10" style="-fx-padding: 10;">
            <Label text="Máquina 3"
                   style="-fx-font-family: 'Century Gothic'; -fx-font-size: 18px; -fx-text-fill: white;"/>
            <VBox fx:id="machineRightArea" alignment="center" spacing="10"/>
        </VBox>
    </right>

    <!-- Mesa (centro) -->
    <center>
        <VBox alignment="center" spacing="25" style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #006400, #008000); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, black, 15, 0.5, 0, 0);">
            <HBox alignment="center" spacing="50">
                <ImageView fx:id="deckImage" fitWidth="100" fitHeight="150" onMouseClicked="#onDeckClicked"
                           style="-fx-effect: dropshadow(one-pass-box, black, 8, 0.5, 2, 2); -fx-cursor: hand;"/>
                <ImageView fx:id="tableCardImage" fitWidth="100" fitHeight="150"
                           style="-fx-effect: dropshadow(one-pass-box, black, 8, 0.5, 2, 2);"/>
            </HBox>
            <Label fx:id="sumLabel" text="Suma: 0"
                   style="-fx-font-family: 'Century Gothic'; -fx-font-size: 22px; -fx-text-fill: gold; -fx-font-weight: bold; -fx-effect: dropshadow(one-pass-box, black, 4, 0.5, 1, 1);"/>
        </VBox>
    </center>

    <!-- Jugador humano (abajo) -->
    <bottom>
        <VBox alignment="center" spacing="15" style="-fx-padding: 20;">
            <Label text="Tú" style="-fx-font-family: 'Century Gothic'; -fx-font-size: 20px; -fx-text-fill: white;"/>
            <GridPane fx:id="playerCardsGrid" hgap="15" vgap="15" alignment="center"/>
        </VBox>
    </bottom>
</BorderPane>
